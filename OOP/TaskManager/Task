import java.util.AbstractList;
import java.util.ArrayList;
import java.util.Arrays;

public class Task {

    private int taskId;
    private String taskDescription;
    private String taskPriority;
    private String taskStatus;

//    private String[] priorityStates = {"Low", "Moderated", "Urgent"};
//    private String[] statusStates = {"Created", "In progress", "Done"};
    public enum Priority {
        LOW, MODERATED, URGENT
    }

    public enum Status {
        CREATED, IN_PROGRESS, DONE
    }

    public Task(int taskId, String taskDescription, Priority taskPriority, String taskStatus) {
        this.taskId = taskId;
        this.taskDescription = taskDescription;
        this.taskPriority = taskPriority.toString();
        this.taskStatus = taskStatus;
    }

    public Task(int taskId, String taskDescription, Priority taskPriority){
        this(taskId, taskDescription, taskPriority, "CREATED");
    }

    public int getTaskId() {
        return taskId;
    }

    public void setTaskId(int taskId){
        this.taskId = taskId;
    }

    public String getTaskDescription(){
        return taskDescription;
    }

    public void setTaskDescription(String description) {
        this.taskDescription = description;
        System.out.println("Description has been updated successfully!");
    }

    public String getTaskPriority() {
        return taskPriority;
    }

    public void setTaskPriority(Priority priority) {
        this.taskPriority = String.valueOf(priority);
        System.out.println("Priority has been updated successfully!");
    }

    public String getTaskStatus() {
        return taskStatus;
    }

    public void setTaskStatus(Status status) {
        this.taskStatus = String.valueOf(status);
        System.out.println("Status has been updated successfully!");
    }

    public String printTask(){
        return String.format("%d. %s, priority: %s, status: %s", getTaskId(), getTaskDescription(), getTaskPriority(), getTaskStatus());
    }


}
